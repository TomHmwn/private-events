<% if  current_user == @event.creator %>
  <% @users.each do |user| %>
    <div>
      <%= user.email %>
      <%= link_to 'invite', new_rsvp_path(user_id: user.id, event_id: @event.id) , data: {turbo_method:"post"} %>
    </div>
  <% end %>
  <% else %>
  <h1>You are not host of this event</h1>

<% end %>
